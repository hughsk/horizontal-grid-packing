html(lang="en")
  head
    title Example
    style.
      html,
      body {
        margin: 0;
        padding: 0;
      }

      img {
        max-width: 100%;
        height: auto;
        vertical-align: middle;
      }

      div {
        margin: 5px;
      }
    link(rel="stylesheet", href="./build/build.css")
    script(src='./build/build.js')
  body
    .hor-pack
      for image in images
        img(
          src = 'http://i.imgur.com/' + image.hash + 'l' + image.ext,
          data-width = image.width,
          data-height = image.height
        )
    script.
      var Pack = require('hor-pack')
      var container = document.querySelector('.hor-pack')
      var imagesHTML = container.innerHTML
      var pack = Pack(container, {
        padding: 5
      })
      window.addEventListener('resize', function () {
        pack.width = container.clientWidth
        pack.height = Math.round(window.innerHeight / 3)
        pack.reload()
      })
      function append() {
        var frag = document.createElement('div')
        frag.innerHTML = imagesHTML
        pack.append(frag.children)
      }